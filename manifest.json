{
  "name": "Stinkybad - URL shortener for humans",
  "short_name": "Stinkybad",
  "version": "0.3",
  "manifest_version": 2,
  "description": "Share the web with words.",
  "omnibox": { "keyword": "sb" },
  "background" : {
    "scripts": [ "eventPage.js" ],
	"persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon_19.png",
      "38": "images/icon_38.png"
    },
    "default_popup": "popup.html",
    "default_title": "Stinkybad this page"
  },
  "author": "Lionello Lunesu",
  "permissions": [
    "http://api.stinkybad.com/v1/",
    "tabs"
  ],
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  }
}
